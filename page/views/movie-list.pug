extends layout

block content
  div(class="container mx-auto px-4 py-6")
    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")
        div(class="mb-6")
          nav(class="mb-4")
            ol(class="flex items-center space-x-2 text-sm text-gray-500")
              li: a(href="/" class="hover:text-primary-600") Beranda
              li: span /
              li: a(href="/genres" class="hover:text-primary-600") Genre
              li: span /
              li(class="text-gray-900 font-medium")= genreName
          
          h1(class="text-2xl md:text-3xl font-bold text-gray-900 mb-2") Genre #{genreName}
          p(class="text-gray-600") Daftar anime dengan genre #{genreName}

        if animeList && animeList.length > 0
          div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 mb-8")
            each anime in animeList 
              div(class="anime-card bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md")
                a(href=`/movies/${anime.years}/${anime.month}/${anime.slug}`)
                  div(class="relative")
                    img(src=anime.poster alt=anime.title class="w-full h-48 object-cover" onerror="this.onerror=null;this.src='https://placehold.co/400x300?text=No+Image';")
                    if anime.status
                      div(class="absolute top-2 left-2 bg-primary-600 text-white text-xs px-2 py-1 rounded")= anime.status
                    if anime.rating
                      div(class="absolute top-2 right-2 bg-black bg-opacity-70 text-white text-xs px-2 py-1 rounded flex items-center")
                        svg(class="w-3 h-3 mr-1 text-yellow-400" fill="currentColor" viewBox="0 0 20 20")
                          path(d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z")
                        span= anime.rating
                  div(class="p-3")
                    h3(class="font-medium text-sm text-gray-900 line-clamp-2 mb-1")= anime.title
                    if anime.release_year
                      p(class="text-xs text-gray-500")= anime.release_year

          if pagination && pagination.last_visible_page !== 0
            nav(class="flex justify-center")
              div(class="flex items-center space-x-2")
                if pagination.has_previous_page
                  a(href=`/movies/?page=${pagination.current_page - 1}` class="px-3 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors") Sebelumnya
                
                each page in Array.from({length: Math.min(5, pagination.last_visible_page)}, (_, i) => {const start = Math.max(1, pagination.current_page - 2);return start + i;}).filter(p => p <= pagination.last_visible_page)
                  if page === pagination.current_page
                    span(class="px-3 py-2 bg-primary-600 text-white rounded")= page
                  else
                    a(href=`/movies/?page=${page}` class="px-3 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors")= page
                
                if pagination.has_next_page
                  a(href=`/movies/?page=${pagination.current_page + 1}` class="px-3 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors") Selanjutnya

        else
          div(class="text-center py-12")
            svg(class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
            h3(class="text-lg font-medium text-gray-900 mb-2") Tidak ada anime ditemukan
            p(class="text-gray-600 mb-4") Belum ada anime dengan genre #{genreName} yang tersedia
            a(href="/genres" class="text-primary-600 hover:text-primary-700 font-medium") Lihat Genre Lain

        if adSlots && adSlots.contentBottom && adSlots.contentBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.contentBottom
              div(class="ad-slot bg-gray-100 rounded-lg")!= ad.content

      div(class="lg:col-span-1")
        if adSlots && adSlots.sidebarTop && adSlots.sidebarTop.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarTop
              div(class="ad-slot bg-gray-100 rounded-lg")!= ad.content

        div(class="bg-white rounded-lg shadow-sm p-6 mb-6")
          h3(class="font-bold text-gray-900 mb-4") Menu Cepat
          div(class="space-y-3")
            a(href="/" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6")
              span Beranda
            a(href="/ongoing" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Ongoing
            a(href="/complete" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Complete
            a(href="/genres" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
              span Semua Genre

        if adSlots && adSlots.sidebarBottom && adSlots.sidebarBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarBottom
              div(class="ad-slot bg-gray-100 rounded-lg")!= ad.content
