doctype html
html(lang="id")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title || "Admin Panel - KitaNime"
    link(rel="icon" href="/images/favicon.ico")
    
    script(src="https://cdn.tailwindcss.com")
    script.
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: {
                50: '#f0f9ff',
                100: '#e0f2fe',
                200: '#bae6fd',
                300: '#7dd3fc',
                400: '#38bdf8',
                500: '#0ea5e9',
                600: '#0284c7',
                700: '#0369a1',
                800: '#075985',
                900: '#0c4a6e'
              }
            }
          }
        }
      }

  body(class="bg-gray-100 font-sans")
    div(class="min-h-screen flex")
      aside(class="w-64 bg-white shadow-sm")
        div(class="p-6")
          div(class="flex items-center space-x-2")
            img(src="/images/logo.png" alt="KitaNime" class="h-8 w-auto" onerror="this.onerror=null;this.src='https://placehold.co/400?text=KN';")
            span(class="text-xl font-bold text-primary-600") KitaNime Admin
        
        nav(class="mt-6")
          div(class="px-6 py-2")
            span(class="text-xs font-semibold text-gray-400 uppercase tracking-wider") Menu Utama
          
          ul(class="mt-2 space-y-1")
            li
              a(href="/admin" class=`flex items-center px-6 py-2 text-sm font-medium transition-colors ${req.path === '/admin' ? 'text-primary-600 bg-primary-50 border-r-2 border-primary-600' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}`)
                svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z")
                span Dashboard
            
            li
              a(href="/admin/api-endpoints" class=`flex items-center px-6 py-2 text-sm font-medium transition-colors ${req.path === '/admin/api-endpoints' ? 'text-primary-600 bg-primary-50 border-r-2 border-primary-600' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}`)
                svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z")
                span API Endpoints
            
            li
              a(href="/admin/ad-slots" class=`flex items-center px-6 py-2 text-sm font-medium transition-colors ${req.path === '/admin/ad-slots' ? 'text-primary-600 bg-primary-50 border-r-2 border-primary-600' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}`)
                svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10")
                span Slot Iklan
            
            li
              a(href="/admin/settings" class=`flex items-center px-6 py-2 text-sm font-medium transition-colors ${req.path === '/admin/settings' ? 'text-primary-600 bg-primary-50 border-r-2 border-primary-600' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}`)
                svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z")
                span Pengaturan
            
            li
              a(href="/admin/preview" class=`flex items-center px-6 py-2 text-sm font-medium transition-colors ${req.path === '/admin/preview' ? 'text-primary-600 bg-primary-50 border-r-2 border-primary-600' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}`)
                svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z")
                span Preview Website

          div(class="px-6 py-2 mt-6")
            span(class="text-xs font-semibold text-gray-400 uppercase tracking-wider") Aksi
          
          ul(class="mt-2 space-y-1")
            li
              a(href="/" target="_blank" class="flex items-center px-6 py-2 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors")
                svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14")
                span Lihat Website
            
            li
              form(action="/admin/logout" method="POST" class="w-full")
                button(type="submit" class="flex items-center w-full px-6 py-2 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors text-left")
                  svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1")
                  span Logout

      main(class="flex-1 flex flex-col overflow-hidden")
        header(class="bg-white shadow-sm border-b border-gray-200")
          div(class="px-6 py-4")
            div(class="flex items-center justify-between")
              h1(class="text-2xl font-semibold text-gray-900")= title
              
              if user
                div(class="flex items-center space-x-3")
                  span(class="text-sm text-gray-600") Selamat datang, #{user.username}
                  div(class="w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center")
                    span(class="text-white text-sm font-medium")= user.username.charAt(0).toUpperCase()

        div(class="flex-1 overflow-auto")
          div(class="p-6")
            if req.query.success
              div(class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4")
                div(class="flex")
                  svg(class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20")
                    path(fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd")
                  div(class="ml-3")
                    p(class="text-sm font-medium text-green-800")
                      case req.query.success
                        when 'updated'
                          | Data berhasil diperbarui
                        when 'added'
                          | Data berhasil ditambahkan
                        when 'deleted'
                          | Data berhasil dihapus
                        default
                          | Operasi berhasil dilakukan

            if req.query.error
              div(class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4")
                div(class="flex")
                  svg(class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20")
                    path(fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd")
                  div(class="ml-3")
                    p(class="text-sm font-medium text-red-800")
                      case req.query.error
                        when 'update_failed'
                          | Gagal memperbarui data
                        when 'add_failed'
                          | Gagal menambahkan data
                        when 'delete_failed'
                          | Gagal menghapus data
                        default
                          | Terjadi kesalahan

            block content

    script.
      document.addEventListener('click', function(e) {
        if (e.target.matches('[data-confirm-delete]')) {
          e.preventDefault();
          if (confirm('Apakah Anda yakin ingin menghapus item ini?')) {
            if (e.target.tagName === 'FORM') {
              e.target.submit();
            } else if (e.target.closest('form')) {
              e.target.closest('form').submit();
            } else {
              window.location.href = e.target.href;
            }
          }
        }
      });

      setTimeout(() => {
        const alerts = document.querySelectorAll('.bg-green-50, .bg-red-50');
        alerts.forEach(alert => {
          alert.style.transition = 'opacity 0.5s';
          alert.style.opacity = '0';
          setTimeout(() => alert.remove(), 500);
        });
      }, 5000);

    block scripts
